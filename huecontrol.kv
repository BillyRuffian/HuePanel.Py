#: import sm kivy.uix.screenmanager

<LightSwitch@ToggleButton>:
    font_size: '30sp'

BoxLayout:
    orientation: 'vertical'
    
    canvas.before:
        Color:
            rgb: .6, .6, .6
#        Rectangle:
#            size: self.size
#            source: 'data/background.png'
            
    ActionBar:
        ActionView:
            id: action_view
            ActionPrevious:
                title: 'Vaynor Farm'
                with_previous: False
                
    ScreenManager:
        id: screen_manager
        transition: sm.FadeTransition()
        Screen:
            name: 'welcome'
            BoxLayout:
                Label:
                    text: 'Hello'
                    font_size: '40sp'
        
        Screen:
            name: 'discovering lights'
            BoxLayout:
                Label:
                    text: 'Discovering your lights...'
                    font_size: '30sp'
        
        Screen:
            name: 'switches'
            GridLayout:
                id: lightswitch_layout
                cols: 3
                rows: 3
                spacing: 30,30
                padding: 50, 50, 50, 50
                    
        